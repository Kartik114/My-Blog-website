    <h1><%=post.title%></h1>

    <% if (typeof post.content == 'undefined' ) { %>
    <p> no content</p>
    <% } else { %>
      <p>
      <%=post.content.substring(0, 100) + " ..."%>
      <a href="/posts/<%=post._id%>">Read More</a>
      </p>
    <% } %>

    <% }) %>

